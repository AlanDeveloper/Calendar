<h1>Dashboard</h1>
<p>
    <%= user.name %>
</p>
<a href="/team/register">Criar time</a>
<a href="/team/list?userId=<%= user.id %>">Meus times</a>
<a href="/logout">Sair</a>

<h1>Times</h1>
<ul>
    <% for (let i=0; i < teams.length; i++) { %>
        <li>
            <div>
                <p><%= teams[i].name %></p>
                <p>Descrição: <%= teams[i].description %></p>
                <p>Responsável: <%= teams[i].bossName ?? "Sem responsável" %></p>
                <a href="/team/participants?teamId=<%=teams[i].id%>">Ver participantes</a>
                <% if (teams[i].participate == false) { %>
                    <a href="/team/invite?teamId=<%=teams[i].id%>&&userId=<%=user.id%>">Enviar convite</a>
                <% } %>
            </div>
        </li>
    <% } %>
</ul>
<h1>Convites Recebidos</h1>
<ul>
    <% for (let i=0; i < invites.length; i++) { %>
        <li>
            <div>
                <p><%= invites[i].name %></p>
                <p>Descrição: <%= invites[i].description %></p>
                <p>Responsável: <%= invites[i].bossName ?? "Sem responsável" %></p>
                <a href="/team/invite/approve?inviteId=<%=invites[i].inviteId%>&&teamId=<%=invites[i].id%>">Aceitar</a>
                <a href="/team/invite/reject?inviteId=<%=invites[i].inviteId%>&&teamId=<%=invites[i].id%>">Rejeitar</a>
            </div>
        </li>
    <% } %>
</ul>
<h1>Usuários</h1>
<ul>
    <% for (let j=0; j < users.length; j++) { %>
        <li>
            <div>
                <p><%= users[j].name %></p>
                <a href="/team/list?userId=<%= users[j].id %>">Ver times</a>
            </div>
        </li>
    <% } %>
</ul>
